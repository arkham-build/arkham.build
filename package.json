{
  "name": "arkham.build",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "analyze": "npx vite-bundle-visualizer",
    "build": "vite build",
    "check": "tsc --noEmit",
    "dev": "vite",
    "fmt": "biome check --write",
    "lint": "biome check",
    "knip": "npx knip",
    "prepare:e2e": " playwright install --with-deps",
    "preview": "vite preview",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:watch": "vitest watch",
    "update-snapshots:macos": "PW_TEST_HTML_REPORT_OPEN='never' playwright test --update-snapshots",
    "update-snapshots:linux": "docker run -v $(pwd):/work/ mcr.microsoft.com/playwright:v1.45.1 bash -c 'cd work && PW_TEST_HTML_REPORT_OPEN='never' CI='1' npm run test:e2e -- --update-snapshots'"
  },
  "dependencies": {
    "@floating-ui/react": "0.26.19",
    "@leeoniya/ufuzzy": "1.0.14",
    "@radix-ui/react-checkbox": "1.1.1",
    "@radix-ui/react-collapsible": "1.1.0",
    "@radix-ui/react-radio-group": "1.2.0",
    "@radix-ui/react-scroll-area": "1.1.0",
    "@radix-ui/react-slider": "1.2.0",
    "@radix-ui/react-tabs": "1.1.0",
    "@radix-ui/react-toggle-group": "1.1.0",
    "comlink": "4.4.1",
    "dompurify": "3.1.6",
    "idb-keyval": "6.2.1",
    "lucide-react": "0.407.0",
    "marked": "12.0.2",
    "nanoid": "5.0.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-virtuoso": "4.7.11",
    "reselect": "5.1.1",
    "wouter": "3.3.1",
    "zustand": "4.5.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@playwright/test": "1.45.1",
    "@svgr/plugin-jsx": "8.1.0",
    "@svgr/plugin-svgo": "8.1.0",
    "@types/dompurify": "3.0.5",
    "@types/node": "20.14.10",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react": "4.3.1",
    "@vitest/coverage-v8": "2.0.1",
    "autoprefixer": "10.4.19",
    "dotenv": "16.4.5",
    "happy-dom": "14.12.3",
    "lefthook": "1.7.1",
    "rollup-plugin-webpack-stats": "1.0.1",
    "typescript": "5.5.3",
    "vite": "5.3.3",
    "vite-plugin-svgr": "4.2.0",
    "vitest": "2.0.1"
  }
}
